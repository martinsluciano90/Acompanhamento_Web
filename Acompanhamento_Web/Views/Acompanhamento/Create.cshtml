@model Acompanhamento_Web.Models.Acompanhamento

@{
    ViewData["Title"] = "Criar";
}

<head runat="server">

</head>

<h1>Criar um Novo Acompanhamento</h1>

<h4>Acompanhamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input id="txtCNPJ" asp-for="CNPJ" type="text" class="form-control">
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RAZAO" class="control-label"></label>
                <input id="txtRazao" asp-for="RAZAO" class="form-control" />
                <span asp-validation-for="RAZAO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VALIDADE" class="control-label"></label>
                <input id="txtValidade" asp-for="VALIDADE" class="form-control" />
                <span asp-validation-for="VALIDADE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AVISADO" class="control-label"></label>
                <input id="txtAvisado" asp-for="AVISADO" class="form-control" />
                <span asp-validation-for="AVISADO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ANOTACAO" class="control-label"></label>
                <input id="txtAnotacao" asp-for="ANOTACAO" class="form-control" />
                <span asp-validation-for="ANOTACAO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMAIL1" class="control-label"></label>
                <input id="txtEmail1" asp-for="EMAIL1" class="form-control" />
                <span asp-validation-for="EMAIL1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMAIL2" class="control-label"></label>
                <input id="txtEmail2" asp-for="EMAIL2" class="form-control" />
                <span asp-validation-for="EMAIL2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnSalvar" type="submit" value="Salvar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-outline-primary">Voltar Para Lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {    

    <link href="~/css/sweetalert.min.css" rel="stylesheet" />
    <script src="~/js/sweetalert.min.js"></script>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">

        window.onload = (function () {

            swal({
                title: "@ViewBag.title_bag",
                text: "@ViewBag.Message",
                type: "@ViewBag.type",
                ShowCancelButtonClass: "btn-primary",
                confirmButtonText: "Ok"
            });
        });

        </script>
    }
    <script type="text/javascript">
        $(document).ready(function () {
            $("#txtCNPJ").inputmask('99.999.999/9999-99');
        });
    </script>
}

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

